    <script src="https://kit.fontawesome.com/7cfb59eb5f.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/TRANGCHU.css")" />

    @Scripts.Render("~/bundles/modernizr")
