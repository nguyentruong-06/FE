    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!--chạy phần menu danh mục-->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleButton = document.querySelector('.danh-muc-toggle button');
            const menuCon = document.getElementById('menu-con');

            toggleButton.addEventListener('click', function () {
                // Kiểm tra trạng thái hiện tại
                if (menuCon.style.display === 'block') {
                    menuCon.style.display = 'none'; // Ẩn đi
                } else {
                    menuCon.style.display = 'block'; // Hiện ra
                }
            });

            // Tùy chọn: Ẩn menu nếu click ra ngoài
            document.addEventListener('click', function (e) {
                if (!menuCon.contains(e.target) && !toggleButton.contains(e.target)) {
                    menuCon.style.display = 'none';
                }
            });
        });
    </script>




</head>
<body>
